{% capture _minutes_workspace %}
  {% comment %}
    Return the number of minutes between midnight and the given time string (e.g. '9:30 AM').

    Parameters:
      `time` (string): the time to convert.

  {% endcomment %}

  {% if time == '9:00' %}
    {% assign time = '9:00 AM' %}
  {% elsif time == '9:30' %}
    {% assign time = '9:30 AM' %}
  {% elsif time == '10:00' %}
    {% assign time = '10:00 AM' %}
  {% elsif time == '10:30'%}
    {% assign time = '10:30 AM' %}
  {% elsif time == '11:00' %}
    {% assign time = '11:00 AM' %}
  {% elsif time == '11:30' %}
    {% assign time = '11:30 AM' %}
  {% elsif time == '12:00' %}
    {% assign time = '12:00 PM' %}
  {% elsif time == '12:30' %}
    {% assign time = '12:30 PM' %}
  {% elsif time == '13:00' %}
    {% assign time = '13:00 PM' %}
  {% elsif time == '13:30' %}
    {% assign time = '13:30 PM' %}
  {% elsif time == '14:00' %}
    {% assign time = '14:00 PM' %}
  {% elsif time == '14:30' %}
    {% assign time = '14:30 PM' %}
  {% elsif time == '15:00' %}
    {% assign time = '15:00 PM' %}
  {% elsif time == '15:30' %}
    {% assign time = '15:30 PM' %}
  {% elsif time == '16:00' %}
    {% assign time = '16:00 PM' %}
  {% elsif time == '16:30' %}
    {% assign time = '16:30 PM' %}
  {% elsif time == '17:00' %}
    {% assign time = '17:00 PM' %}
  {% elsif time == '17:30' %}
    {% assign time = '17:30 PM' %}
  {% endif %}

  {% assign _time = include.time %}
  {% assign _hhmm = _time | split: ' ' | first | split: ':' %}
  {% assign _hours = _hhmm | first | to_integer %}
  {% assign _minutes = _hhmm | last | to_integer %}
  {% assign _ampm = _time | split: ' ' | last | upcase %}

  {% if _ampm == 'AM' and _hours == 12 %}
    {% assign _hours = _hours | minus: 12 %}
  {% elsif _ampm == 'PM' and _hours != 12 %}
    {% assign _hours = _hours | plus: 12 %}
  {% endif %}
{% endcapture %}{% assign _minutes_workspace = '' %}{{ _hours | times: 60 | plus: _minutes }}

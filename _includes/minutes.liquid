{% capture _minutes_workspace %}
  {% comment %}
    Return the number of minutes between midnight and the given time string (e.g. '9:30 AM').

    Parameters:
      `time` (string): the time to convert.

  {% endcomment %}

  {% if include.time == '18:00' %}
    {% assign _time = '6:00 PM' %}
  {% elsif include.time == '18:30' %}
    {% assign _time = '6:30 PM' %}
  {% elsif include.time == '19:00' %}
    {% assign _time = '7:00 PM' %}
  {% elsif include.time == '19:30' %}
    {% assign _time = '7:30 PM' %}
  {% elsif include.time == '20:00' %}
    {% assign _time = '8:00 PM' %}
  {% elsif include.time == '20:30' %}
    {% assign _time = '8:30 PM' %}
  {% elsif include.time == '21:00' %}
    {% assign _time = '9:00 PM' %}
  {% elsif include.time == '21:30' %}
    {% assign _time = '9:30 PM' %}
  {% elsif include.time == '22:00' %}
    {% assign _time = '10:00 PM' %}
  {% elsif include.time == '22:30' %}
    {% assign _time = '10:30 PM' %}
  {% elsif include.time == '23:00' %}
    {% assign _time = '11:00 PM' %}
  {% endif %}

  {% assign _time = include.time %}
  {% assign _hhmm = _time | split: ' ' | first | split: ':' %}
  {% assign _hours = _hhmm | first | to_integer %}
  {% assign _minutes = _hhmm | last | to_integer %}
  {% assign _ampm = _time | split: ' ' | last | upcase %}

  {% if _ampm == 'AM' and _hours == 12 %}
    {% assign _hours = _hours | minus: 12 %}
  {% elsif _ampm == 'PM' and _hours != 12 %}
    {% assign _hours = _hours | plus: 12 %}
  {% endif %}

{% endcapture %}{% assign _minutes_workspace = '' %}{{ _hours | times: 60 | plus: _minutes }}
